extends layout

block content
    head 
        script(type="text/javascript" src="../scripts/reportDate.js")
        script(type="text/javascript" src="https://momentjs.com/downloads/moment.js")
    div.container
        div.jumbotron.text-center
            #sent
                if sent
                    h4.text-danger Informacja
                    p.text-danger.success__raport Raport został poprawnie wygenerowany i przesłany na maila.
                    
            div.row
                div.col-xl-12
                    h1.text-center.text-primary Badania Przesiewowe
            div.row
                div.col-xl-12
                    h2.text-center.text-secondary Wybierz przedział wiekowy
                    form(action="/age6")
                        input.buttons.btn.btn-info(value="0-6 lat" type="submit")
                    br
                    form(action="/age7")
                        input.buttons.btn.btn-info(value="7+ lat" type="submit")

        form(action="/logout")
            input.logout.btn.btn-danger(type="submit" value="Wyloguj")
        //.col-xl-6.restart
            .row
                form(action="/restart")
                    label.text-secondary Uzywać tylko w nagłych przypadkach!
                    input.btn.btn-danger(type="submit" value="Restart aplikacji")
                

                    

                        

                    