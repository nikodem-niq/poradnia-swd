extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/auth/login")
            #error
                if error
                    div.col-xl-12.text-center
                        p.text-danger Złe dane

            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Wpisz swój PIN

            label( for="inputPIN" class="sr-only") PIN
            input(type="password" name="pin" id="inputPIN" class="form-control" placeholder="PIN.." required autofocus)
            
            - var buttonClass=['btn', 'btn-lg', 'btn-success', 'btn-block'];
            button(class=buttonClass type="submit") Zaloguj się